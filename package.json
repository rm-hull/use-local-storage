{
  "name": "@rm-hull/use-local-storage",
  "version": "0.0.1",
  "description": "A React hook for syncing state with localStorage",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
